{
  "name": "adn-ui",
  "version": "0.0.0",
  "private": true,
  "description": "AdnUI - A lightweight, accessible React component library built on top of Base UI",
  "keywords": [
    "adn-ui",
    "components",
    "design-system",
    "library",
    "react",
    "tailwind",
    "ui"
  ],
  "homepage": "https://ui.aydinthefirst.com",
  "bugs": {
    "url": "https://github.com/aydinthefirst/adn-ui/issues"
  },
  "license": "MIT",
  "author": "Halil AydÄ±n <aydinhalil980@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AydinTheFirst/adn-ui.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "NODE_ENV=production turbo run build",
    "dev": "turbo run dev",
    "format": "oxfmt .",
    "lint": "oxlint --fix --type-aware .",
    "prepare": "husky",
    "prepublish": "turbo run build",
    "publish": "bun changeset && bun changeset version && bun changeset publish",
    "start": "turbo run start",
    "type-check": "oxlint --type-check ."
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.1",
    "turbo": "^2.7.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxfmt .",
      "oxlint --fix --type-aware ."
    ]
  },
  "engines": {
    "node": ">20"
  },
  "packageManager": "bun@1.3.4"
}
